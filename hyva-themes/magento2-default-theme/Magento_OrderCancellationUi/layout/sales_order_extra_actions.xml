<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_modal"/>
    <body>
        <referenceContainer name="order-list-extra-action-titles">
            <block name="order-list-cancel-action-title" as="cancel" template="Magento_OrderCancellationUi::order/actions/order-list-cancel-order-title.phtml"/>
        </referenceContainer>
        <referenceContainer name="order-list-extra-action-buttons">
            <block name="order-list-cancel-action-button" as="cancel" template="Magento_OrderCancellationUi::order/actions/order-list-cancel-order-button.phtml"/>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="cancel-order-modal" template="Magento_OrderCancellationUi::cancel-order-modal.phtml"/>
        </referenceContainer>
    </body>
</page>
